<Window x:Class="Caregiver1.WindowCaregiver2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Caregiver1"
        mc:Ignorable="d"
        Title="WindowCaregiver2" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblChild" Content="Barnets namn" HorizontalAlignment="Left" Margin="74,65,0,0" VerticalAlignment="Top" Width="176" FontFamily="Lucida Calligraphy" FontWeight="Bold"/>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="216" Margin="74,94,0,0" VerticalAlignment="Top" Width="413">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="date_id" Width="100" DisplayMemberBinding="{Binding date_id}"/>
                    <GridViewColumn Header="weekday" Width="100" DisplayMemberBinding="{Binding weekday}"/>
                    <GridViewColumn Header="breakfast" Width="100" DisplayMemberBinding="{Binding breakfast}"/>
                    <GridViewColumn Header="attendance" Width="100" DisplayMemberBinding="{Binding attendance}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
